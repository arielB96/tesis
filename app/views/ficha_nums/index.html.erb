<p id="notice"><%= notice %></p>

<h1>Ficha Nums</h1>

<table class="table table-bordered">
  <thead>
    <%= render 'ficha_nums/buscar' %>
    <tr>
      <th>Numero</th>
      <th>Puesto de Salud</th>
      <th>Tipo</th>
        <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ficha_nums.each do |ficha_num| %>
      <tr>
        <td><%= ficha_num.numero %></td>
        <td><%= ficha_num.puesto_salud.nombre %></td>
        <td><%= ficha_num.categori.tipo %></td>

        

        <% if ficha_num.categori.tipo == 'Ficha Familiar' %>       
          <td><%= link_to 'Nuevo Paciente', ficha_num %></td>
          <% else %>
          <td>   </td>
        <% end %>
        <td><%= link_to 'New Diagnostico', new_diagnostico_path %></td>
        <td><%= link_to 'Destroy', ficha_num, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

