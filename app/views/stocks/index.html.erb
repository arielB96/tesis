<p id="notice"><%= notice %></p>

<h1>Stocks</h1>

<table>
  <thead>
    <tr>
      <th>Nombremedicamento</th>
      <th>Fechaentrada</th>
      <th>Fechavencimiento</th>
      <th>Descrip</th>
      <th>Cantidad</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td><%= stock.nombreMedicamento %></td>
        <td><%= stock.fechaEntrada %></td>
        <td><%= stock.fechaVencimiento %></td>
        <td><%= stock.descrip %></td>
        <td><%= stock.cantidad %></td>
        <td><%= link_to 'Show', stock %></td>
        <td><%= link_to 'Edit', edit_stock_path(stock) %></td>
        <td><%= link_to 'Destroy', stock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

